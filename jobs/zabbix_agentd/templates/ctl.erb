#!/bin/bash

RUN_DIR=/var/vcap/sys/run/zabbix_agentd
LOG_DIR=/var/vcap/sys/log/zabbix_agentd
PIDFILE=${RUN_DIR}/zabbix_agentd.pid

case $1 in

  start)
    iptables -A INPUT -p tcp -s <%= properties.zabbix_server_ip %> -j ACCEPT
    iptables -A INPUT -p tcp -m state --state NEW -m tcp --dport 10050 -j ACCEPT
    mkdir -p $RUN_DIR $LOG_DIR
    chown -R vcap:vcap $RUN_DIR $LOG_DIR

    #echo $$ >> $PIDFILE

    cd /var/vcap/packages/zabbix_agentd

    exec chpst -u vcap:vcap sbin/zabbix_agentd --config /var/vcap/jobs/zabbix_agentd/conf/zabbix_agentd.conf \
      >>  $LOG_DIR/zabbix_agent.stdout.log \
      2>> $LOG_DIR/zabbix_agent.stderr.log

    ;;

  stop)

    kill `cat $PIDFILE`

    rm -f $PIDFILE

    iptables -A INPUT -p tcp -s <%= properties.zabbix_server_ip %> -j DROP
    iptables -A INPUT -p tcp -m state --state NEW -m tcp --dport 10050 -j DROP

    ;;

  *)
    echo "Usage: ctl {start|stop}" ;;

esac
